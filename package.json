{
  "name": "te-reo-academy",
  "version": "1.0.0",
  "description": "Production-ready te reo MÄori learning platform with multiplayer and progress tracking",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@te-reo-academy/frontend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:status": "supabase status",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm install && npm run setup --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "author": "Te Reo Academy Team",
  "license": "MIT"
}
